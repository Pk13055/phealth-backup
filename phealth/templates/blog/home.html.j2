{% block head %}
{% endblock %}
{% block content %}
<section class="featured_blog">
	<div class="container">
		<div class="row">
			<div class="col-md-8">
				<div class="full_width featured_blog_in">
					<div class="caption">
						<h3>Relationships 101: How to get the best<br> out of a Relationship?</h3>
						<a href="blog_single.html">Read More &nbsp;<i class="fa fa-angle-right"></i></a>
					</div>
				</div>
			</div>
			<div class="col-md-4 padding_left_0">
				<div class="full_width add_blog">
				</div>
			</div>
		</div>
	</div>
</section>
{% for category in category_posts %}
<section class="blog_one">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="full_width blog_one_one">
					<h5><span class="fa fa-circle"></span>{{ category.name }}</h5>
					<a href="#">View All</a>
				</div>
			</div>
			<div class="col-md-12">
				<ul class="blog_con_ul">
					{% for post in category.featured_posts %}
					{% if loop.first %}
					<li class="col-md-6 no_padding_all blog_list_big blog_list_big0ne">
						<img src="http://via.placeholder.com/200x200">
						<div class="caption" color = "{{category.color}}">
							<h5>{{post.date_added}}</h5>
							<p>{{post.title}}</p>
							<ul class="share_coment">
								<li><a href="#"><span class="fa fa-heart"></span>26 LIKES</a></li>
								<li><a href="#"><span class="fa fa-share"></span>5 Share</a></li>
								<li><a href="#"><span class="fa fa-comment"></span>3 Comments</a></li>
							</ul>
						</div>
					</li>
					{% endif %}
					<li class="col-md-3 no_padding_all blog_list_small">
						<img src="http://via.placeholder.com/350x150">
						<div class="caption_small">
							<h3>{{ post.title }}</h3>
							{# <p>Relationships 101: How to get the best out of a Relationship?</p> #}
							<span>{{ post.content | safe | truncatechars:25 }}</span>
										{# <ul class="share_coment">
											<li><a href="#"><i class="fa fa-heart"></i>26 LIKES</a></li>
											<li><a href="#"><i class="fa fa-share"></i>5 Share</a></li>
											<li><a href="#"><i class="fa fa-comment"></i>3 Comments</a></li>
										</ul> #}
										<a href="{% url 'blog:post' category_name=category.name post_uid=post.uid %}">Read More</a>
									</div>
								</li>
								{% endfor %}
							</ul>
						</div>
					</div>
				</div>
			</section>
			{# {% endif %} #}
			{% endfor %}
