{# dashboard base template (with navbar) #}
{% extends 'sponsor/base.html.j2' %}
{% block head %}
<title> Sponsor Dashboard - {{ title }}</title>
{% endblock %}
{% load static %}
{% block navbar %}
<nav class="navbar navbar-default navbar-fixed-top navbar-inverse">
	<div class="container-fluid">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collaps" aria-expanded="false"><i class="fa fa-bars fa-lg"></i></button>
			<a class="navbar-brand" href="{% url 'sponsor:dashboard_home' %}"><strong class="hidden-xs">PHealth</strong> Sponsor</a>
			<p class="navbar-text text-muted"><em>Dashboard</em></p>
		</div>
		<div class="collapse navbar-collapse" id="navbar-collaps">
			<ul class="nav navbar-nav">
				<li><a href="{% url 'sponsor:dashboard_home' %}">Basic Information</a></li>
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Business<span class="caret"></span></a>
					<ul class="dropdown-menu">
						{# <li><a href="{% url 'sponsor:dashboard_participants' %}">Participants</a></li> #}
						<li role="separator" class="divider"></li>
						<li><a href="{% url 'sponsor:dashboard_discount' %}">Discounts</a></li>
					</ul>
				</li>
			</ul>
			<ul class="nav navbar-nav navbar-right">
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-user-circle fa-lg"></i> Account <span class="caret"></span></a>
					<ul class="dropdown-menu">
						<li><a href="#!">{{ request.session.email }}</a></li>
						<li role="separator" class="divider"></li>
						<li><a href="{% url 'common:signout' %}">Sign out</a></li>
					</ul>
				</li>
			</ul>
		</div>
	</div>
</nav>
{% endblock %}
{% block footer %}
<footer class="footer navbar-default navbar-inverse">
	<div class="container-fluid">
		<div class="navbar-header navbar-right">
			<a class="navbar-brand" href="{% url 'sponsor:dashboard_home' %}"><strong>PHealth</strong></a>
		</div>
		<p class="text-muted navbar-text">All rights reserved 2018 &copy;</p>
	</div>
</footer>
{% endblock %}
