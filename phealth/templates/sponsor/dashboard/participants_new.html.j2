{% extends 'sponsor/dashboard/base.html/j2' %} {% block content %} {% load static %}
<div id="page-wrapper">
	<div class="container-fluid">
		<div class="row bg-title">
			<div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
				<h4 class="page-title">Manage Participants</h4>
			</div>
			<div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
				<ol class="breadcrumb">
					<li><a href="index.html">Dashboard</a></li>
					<li><a href="#">Basic Details</a></li>
				</ol>
			</div>
			<!-- /.col-lg-12 -->
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="panel panel-info">
					<div class="panel-heading">
						Add New Participants
					</div>
					<div class="panel-wrapper collapse in" aria-expanded="true">
						<div class="panel-body">
							<div class="form-body">
								<ul class="nav nav-pills m-b-30 pull-right">
									<li class="active"> <a href="#singleusertab" data-toggle="tab" aria-expanded="true">Add Single User</a> </li>
									<li class=""> <a href="#bulkusertab" data-toggle="tab" aria-expanded="false">Upload Bulk Participants</a> </li>
								</ul>
								<h3 class="box-title">&nbsp;</h3>
								<hr class="m-t-0 m-b-40">
								<div class="tab-content br-n pn">
									<div id="singleusertab" class="tab-pane active">
										<form action="#" class="form-horizontal">
											<h3 class="box-title">Add single User</h3>
											<div class="row">
												<div class="col-md-6">
													<div class="form-group">
														<label class="control-label col-md-3">Name of the Participant</label>
														<div class="col-md-9">
															<input type="text" class="form-control" placeholder="Name of the Participant" name="firstname">
														</div>
													</div>
												</div>
												<div class="col-md-6">
													<div class="form-group">
														<label class="control-label col-md-3">Designation</label>
														<div class="col-md-9">
															<input type="text" class="form-control" id="designation" placeholder="Designation" name="designation">
														</div>
													</div>
												</div>
												<div class="col-md-6">
													<div class="form-group">
														<label class="control-label col-md-3">Mobile No</label>
														<div class="col-md-9">
															<input type="number" class="form-control" id="mobileno" placeholder="mobileno" name="mobileno">
														</div>
													</div>
												</div>
												<div class="col-md-6">
													<div class="form-group">
														<label class="control-label col-md-3">Email ID</label>
														<div class="col-md-9">
															<input type="text" class="form-control" id="email" placeholder="Email ID" name="email">
														</div>
													</div>
												</div>
											</div>
											<div class="form-actions">
												<div class="row">
													<div class="col-md-12">
														<div class="row">
															<div class="col-md-offset-10 col-md-2">
																<button type="submit" class="btn btn-success">Add Participant</button>
																<button type="button" class="btn btn-default">Cancel</button>
															</div>
														</div>
													</div>
													<div class="col-md-6"> </div>
												</div>
											</div>
										</form>
									</div>
									<div id="bulkusertab" class="tab-pane">
										<form action="#" class="form-horizontal">
											<h3 class="box-title">Upload Bulk Participants</h3>
											<div class="row">
												<div class="col-md-6">
													<p>Add a set of users by uploading an excel sheet with the required fields</p>
													<table class="table">
														<tr>
															<th>Name</th>
															<th>Designation</th>
															<th>MobileNo</th>
															<th>EmailID</th>
														</tr>
														<tr>
															<td>Rajesh</td>
															<td>Software Engineer</td>
															<td>949317555</td>
															<td>rajesh@gmail.com</td>
														</tr>
														<tr>
															<td>Rajesh</td>
															<td>Software Engineer</td>
															<td>949317555</td>
															<td>rajesh@gmail.com</td>
														</tr>
													</table>
												</div>
												<div class="col-md-6">
													<h4>Download the template with the above fields, Keep adding rows for further details.</h4>
													<h3><a href="#"> Get the template here</a></h3>
												</div>
												<div class="col-md-6">
													<div class="form-group">
														<label class="control-label col-md-3">File</label>
														<div class="col-md-9">
															<input type="file" class="form-control" id="id_file" placeholder="Upload Excel Sheet" name="file">
														</div>
													</div>
												</div>
											</div>
											<div class="form-actions">
												<div class="row">
													<div class="col-md-12">
														<div class="row">
															<div class="col-md-offset-10 col-md-2">
																<button type="submit" class="btn btn-success">Upload Participants</button>
																<button type="button" class="btn btn-default">Cancel</button>
															</div>
														</div>
													</div>
													<div class="col-md-6"> </div>
												</div>
											</div>
										</form>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- /.container-fluid -->
		<footer class="footer text-center"> 2018 &copy; Phealth </footer>
	</div>
</div>
{% block script %}
<script src="{% static 'common/dashboard/js/custom.min.js %}"></script>
<script src="{% static 'common/dashboard/js/dashboard1.js %}"></script>
{% endblock script %} {% endblock content %}
