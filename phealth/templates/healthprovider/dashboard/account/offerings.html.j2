{% extends "healthprovider/dashboard/base.html.j2" %} {% load static %} {% block content %}
<style>
h4{color:red;}
</style>
<div class="row bg-title">
	<div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
		<h4 class="page-title">Dashboard 1</h4>
	</div>
	<div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
		<ol class="breadcrumb">
			<li>
				<a href="index.html">Dashboard</a>
			</li>
			<li>
				<a href="#">Contact Details</a>
			</li>
		</ol>
	</div>
	<!-- /.col-lg-12 -->
</div>
<div class="row">
	<div class="col-md-12">
		<div class="panel panel-info">
			<div class="panel-heading">
				Offering Details
			</div>
			<h4 align=center>Please Don't Refresh the Page</h4>
			<div class="progress">
				<div class="progress-bar progress-bar-danger wow animated progress-animated" role="progressbar" aria-valuenow="60" aria-valuemin="0"
				aria-valuemax="100" style="width: 30%;">
				<span class="sr-only">60% Complete</span>
			</div>
		</div>
		<div class="panel-wrapper collapse in" aria-expanded="true">
			<div class="panel-body">
				<form method="POST" class="form-horizontal">
					<div class="form-body">
						<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#addcontact">Add New Offerings</button>
						<div class="modal fade" id="addcontact" role="dialog">
							<div class="modal-dialog modal-lg">
								<div class="modal-content">
									<div class="modal-header">
										<button type="button" class="close" data-dismiss="modal">&times;</button>
										<h4 class="modal-title">Offerings</h4>
									</div>
									<div class="modal-body">
										<div class="row">
											<div class="col-md-12">
												<div class="panel panel-info">
													<div class="panel-wrapper collapse in" aria-expanded="true">
														<div class="panel-body">
															<form method="POST" class="form-horizontal">
																{% csrf_token %}
																<div class="form-body">
																	<h3 class="box-title">Configure Offerings to AAAD Health Seekers</h3>
																	<hr class="m-t-0 m-b-40">
																	<div class="row">
																		<div class="col-md-12">
																			<div class="form-group">
																				<label class="control-label col-md-3">Out Patient Services</label>
																				<div class="col-md-9">
																					<input type="text" class="form-control" placeholder="Enter Discount" name="out_patient_service">
																				</div>
																			</div>
																		</div>
																		<div class="col-md-12">
																			<div class="form-group">
																				<label class="control-label col-md-3">Emergency Room</label>
																				<div class="col-md-9">
																					<input type="text" class="form-control" id="discount" placeholder="Enter Discount" name="emercency_room">
																				</div>
																			</div>
																		</div>
																		<div class="col-md-12">
																			<div class="form-group">
																				<label class="control-label col-md-3">Day-Care Procedure</label>
																				<div class="col-md-9">
																					<input type="text" class="form-control" id="discount" placeholder="Enter Discount" name="procedure">
																				</div>
																			</div>
																		</div>
																		<div class="col-md-12">
																			<div class="form-group">
																				<label class="control-label col-md-3">Lab Services</label>
																				<div class="col-md-9">
																					<input type="text" class="form-control" id="discount" placeholder="Enter Discount" name="lab">
																				</div>
																			</div>
																		</div>
																		<div class="col-md-12">
																			<div class="form-group">
																				<label class="control-label col-md-3">Select Speciality</label>
																				<div class="col-md-9">
																					<select class="form-control" id="gender_id" name="speciality">
																						<option disabled="" selected="">Select Speciality</option>
																						<option>Anaesthesiology &amp; Emergency Medicine</option>
																						<option>Ayurvedic</option>
																						<option>Gynacology</option>
																					</select>
																				</div>
																			</div>
																		</div>
																		<div class="col-md-12">
																			<div class="form-group">
																				<label class="control-label col-md-3">Speciality Discount</label>
																				<div class="col-md-9">
																					<input type="text" class="form-control" id="discount" placeholder="Enter Discount" name="discount">
																				</div>
																			</div>
																		</div>

																	</div>

																</div>
															</form>
														</div>
													</div>
												</div>
											</div>
										</div>
									</div>
									<div class="modal-footer">
										<button type="submit" class="btn btn-success">Add</button>
										<button type="button" class="btn btn-default" data-dismiss="modal">Cancel & Close </button>
									</div>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-sm-12">
								<div class="white-box">
									<div class="table-responsive">
										<table id="myTable" class="table table-striped">
											<thead>
												<tr>
													<th><strong>Out-Patient Services</strong></th>
													<th><strong>Emergency Room</strong></th>
													<th><strong>Day-Care Procedures</strong></th>
													<th><strong>Lab Services</strong></th>
													<th><strong>Select Speciality</strong></th>
													<th><strong>Speciality Discount</strong></th>
												</tr>
											</thead>
											<tbody>
												{% for offering in offerings %}
												<tr>
													<td>{{offering.out_patient_service}}</td>
													<td>{{offering.emercency_room}}</td>
													<td>{{offering.procedure}}</td>
													<td>{{offering.speciality}}</td>
													<td>{{offering.discount}}</td>
												</tr>
												{% endfor %}
											</tbody>
										</table>
									</div>
								</div>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
</div>
{% endblock content %}