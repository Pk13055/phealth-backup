{% extends "healthprovider/dashboard/base.html.j2" %} {% load static %} {% block content %}
<div class="row bg-title">
	<div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
		<h4 class="page-title">Dashboard 1</h4>
	</div>
	<div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
		<ol class="breadcrumb">
			<li>
				<a href="index.html">Dashboard</a>
			</li>
			<li>
				<a href="#">Contact Details</a>
			</li>
		</ol>
	</div>
	<!-- /.col-lg-12 -->
</div>
<div class="row">
	<div class="col-md-12">
		<div class="panel panel-info">
			<div class="panel-heading">
				Special Check Details
			</div>
			<div class="progress">
				<div class="progress-bar progress-bar-danger wow animated progress-animated" role="progressbar" aria-valuenow="60" aria-valuemin="0"
				aria-valuemax="100" style="width: 30%;">
				<span class="sr-only">60% Complete</span>
			</div>
		</div>
		<div class="panel-wrapper collapse in" aria-expanded="true">
			<div class="panel-body">
				<form method="POST" class="form-horizontal">
					{% csrf_token %}
					<div class="form-body">
						<!--<h3 class="box-title">Offering Details</h3>-->
						<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#addcontact">Add Special Checks</button>
						<div class="modal fade" id="addcontact" role="dialog">
							<div class="modal-dialog modal-lg">
								<div class="modal-content">
									<div class="modal-header">
										<button type="button" class="close" data-dismiss="modal">&times;</button>
										<h4 class="modal-title">Special Checks</h4>
									</div>
									<div class="modal-body">
										<div class="row">
											<div class="col-md-12">
												<div class="panel panel-info">
													<div class="panel-wrapper collapse in" aria-expanded="true">
														<div class="panel-body">
															<form action="contact.html" class="form-horizontal">
																<div class="form-body">
																	<h3 class="box-title">Share on AAD Special Health Checks to AAD</h3>
																	<hr class="m-t-0 m-b-40">
																	<div class="row">
																		<div class="col-md-12">
																			<div class="form-group">
																				<label class="control-label col-md-3">Healthcheck Package Name:</label>
																				<div class="col-md-9">
																					<input type="text" class="form-control" placeholder="Enter Name" name="name">
																				</div>
																			</div>
																		</div>
																		<div class="col-md-12">
																			<div class="form-group">
																				<label class="control-label col-md-3">Healthcheck Package Description</label>
																				<div class="col-md-9">
																					<input type="text" class="form-control" placeholder="Enter Description" name="description">
																				</div>
																			</div>
																		</div>
																		<div class="col-md-12">
									
																		</div>
																		<div class="col-md-12">
																			<div class="form-group">
																				<label class="control-label col-md-3">Ad Price</label>
																				<div class="col-md-9">
																					<input type="number" class="form-control" id="price" placeholder="Enter Price" name="price">
																				</div>
																			</div>
																		</div>
																		<div class="col-md-12">
																			<div class="form-group">
																				<label class="control-label col-md-3">Share to AD</label>
																				<div class="col-md-9">
																					<input type="number" class="form-control" id="share" placeholder="Enter Share to AD" name="share">
																				</div>
																			</div>
																		</div>
																		<div class="col-md-12">
																			<div class="form-group">
																				<label class="control-label col-md-3">Lab Services</label>
																				<div class="col-md-9">
																					<input type="text" class="form-control" id="lab" placeholder="Enter Service" name="lab">
																				</div>
																			</div>
																		</div>
																		<div class="col-md-12">
																			<div class="form-group">
																				<label class="control-label col-md-3">Speciality Discount</label>
																				<div class="col-md-9">
																					<input type="text" class="form-control" id="discount" placeholder="Enter Discount" name="discount">
																				</div>
																			</div>
																		</div>
																	</div>

																</div>

															</form>
														</div>
													</div>
												</div>
											</div>
										</div>
									</div>
									<div class="modal-footer">
										<button type="submit" class="btn btn-success">Add</button>
										<button type="button" class="btn btn-default" data-dismiss="modal">Cancel & Close </button>
									</div>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-sm-12">
								<div class="white-box">
										<!--<h3 class="box-title m-b-0">Contact Person's</h3>
											<p class="text-muted m-b-30">Use Data tablels here</p>-->
											<div class="table-responsive">
												<table id="myTable" class="table table-striped">
													<thead>
														<tr>
															<th>Healthcheck Package Name</th>
															<th>Healthcheck Package description</th>
															<th>Ad Price</th>
															<th>Share to AD</th>
															<th>Lab Services</th>
															<th>Discount</th>
														</tr>
													</thead>
													<tbody>
														{% for special_check in special_checks %}
														<tr>
															<td>{{special_check.name}}</td>
															<td>{{special_check.description}}</td>
															<td>{{special_check.price}}</td>
															<td>{{special_check.share}}</td>
															<td>{{special_check.lab}}</td>
															<td>{{special_check.discount}}</td>
														</tr>
														{% endfor %}
													</tbody>
												</table>
											</div>
										</div>
									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	{% endblock content %}