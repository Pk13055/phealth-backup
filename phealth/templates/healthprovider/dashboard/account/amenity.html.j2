{% extends "healthprovider/dashboard/base.html.j2" %} {% load static %} {% block script %}
<script src="{% static 'healthprovider/js/calender.js' %}"></script>
{% endblock %} {% block content %}
<div class="container-fluid">
	<div class="row bg-title">
		<div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
			<h4 class="page-title">Manage Amenities</h4>
		</div>
		<div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
			<ol class="breadcrumb">
				<li><a href="{% url 'healthprovider:dashboard_home' %}">Dashboard</a></li>
				<li><a href="{% url 'healthprovider:account_amenity' %}">Work Timings</a></li>
			</ol>
		</div>
	</div>
      <section id="work">
		<div class="row">
			<div class="col-md-12">
				<div class="panel panel-info">
					<div class="panel-heading">
						Amenities
					</div>
					<div class="panel-wrapper collapse in" aria-expanded="true">
						<div class="panel-body">
							<div class="form-body">
								<form method="POST">

									{% csrf_token %}

									<table class="table table-striped table-hover">
										<thead>
											<tr>
												<th>Add Amenity</th>
											</tr>
										</thead>
										<tbody>
											{% for s in s %}
											<tr>
												<td><input type="checkbox" name="amenity" value="{{s.id}}"></td>
												<td>{{ s }}</td>
											</tr>
											{% endfor %}
										</tbody>
									</table>
									<div class="form-actions">
										<button type="submit" class="btn btn-success">Save Changes</button>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</div>
        {% endblock content %}