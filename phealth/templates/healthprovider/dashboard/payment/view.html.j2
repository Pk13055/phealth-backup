{% extends "healthprovider/dashboard/base.html.j2" %} 
{% load static %} 
{% block content %}
<div class="row bg-title">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h4 class="page-title">Manage Payments</h4>
    </div>
    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
        <ol class="breadcrumb">
            <li>
                <a href="{% url 'healthprovider:dashboard_home' %}">Dashboard</a>
            </li>
            <li>
                <a href="{% url 'healthprovider:payment_view' %}">View / Update Payments</a>
            </li>
        </ol>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /row -->
<div class="row">
    <div class="col-sm-12">
        <div class="white-box">
            <h3 class="box-title m-b-0">Payments</h3>
            <p class="text-muted m-b-30">View or update Payments</p>
            <div class="table-responsive">
                <table id="payTable" class="table table-striped">
                    <thead>
                        <tr>
                            <th>Sr.No</th>
                            <th>Timestamp</th>
                            <th>Receiver</th>
                            <th>Receiver email</th>
                            <th>Amount</th>
                            <th>UID</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for transaction in transactions %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{ transaction.timestamp }}</td>
                            <td>{{ transaction.receiver.name }}</td>
                            <td>{{ transaction.receiver.email }}</td>
                            <td>{{ transaction.amount }}</td>
                            <td>{{ transaction.uid }}</td>
                        </tr>
                        {% empty %}
                        <tr>
                            <td colspan="6">No records to show!</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock content %} 
{% block script %}
<script>
    $(document).ready(function () {
        $('#payTable').DataTable();
        $(document).ready(function () {
            var table = $('#example').DataTable({
                "columnDefs": [{
                    "visible": false,
                    "targets": 2
                }],
                "order": [
                    [2, 'asc']
                ],
                "displayLength": 25,
                "drawCallback": function (settings) {
                    var api = this.api();
                    var rows = api.rows({
                        page: 'current'
                    }).nodes();
                    var last = null;
                    api.column(2, {
                        page: 'current'
                    }).data().each(function (group, i) {
                        if (last !== group) {
                            $(rows).eq(i).before(
                                '<tr class="group"><td colspan="5">' + group +
                                '</td></tr>');
                            last = group;
                        }
                    });
                }
            });
            // Order by the grouping
            $('#example tbody').on('click', 'tr.group', function () {
                var currentOrder = table.order()[0];
                if (currentOrder[0] === 2 && currentOrder[1] === 'asc') {
                    table.order([2, 'desc']).draw();
                } else {
                    table.order([2, 'asc']).draw();
                }
            });
        });
    });
    $('#payTable').DataTable({
        dom: 'Bfrtip',
        buttons: [
            'copy', 'csv', 'excel', 'pdf', 'print'
        ]
    });
</script>
{% endblock script %}