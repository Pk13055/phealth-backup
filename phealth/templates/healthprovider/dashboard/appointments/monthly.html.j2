{% extends "healthprovider/dashboard/base.html.j2" %} {% load static %} 
{% block styles %}
<style>
    .event-info {
        background-color: #f1d82f;
        color: black;
        border: 2px solid black;
        border-radius: 0.3vh;
    }
    .event-success {
        background-color: #41B3F9;
        border: 2px solid black;
        border-radius: 0.3vh;

    }
    .event-warning {
        background-color: #ba2c2c;
        border: 2px solid black;
        border-radius: 0.3vh;

    }
    .event-special {
        background-color: #2c5dba;        
        border: 2px solid black;
        border-radius: 0.3vh;
    }
</style>
{% endblock styles %}
{% block content %}
<div class="container-fluid">
    <div class="row bg-title">
        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
            <h4 class="page-title">Monthly Appointments View</h4>
        </div>
        <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
            <ol class="breadcrumb">
                <li>
                    <a href="{% url 'clinician:dashboard_home' %}">Dashboard</a>
                </li>
                <li>
                    <a href="{% url 'clinician:appointment_monthly' %}">Monthly Appointments View</a>
                </li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12" id="userCal" style='margin-bottom: 20px'></div>
    </div>
</div>
{% endblock content %} 
{% block script %} 
<script src="{% static 'common/dashboard/js/cal.js' %}"></script>
{% endblock script %}