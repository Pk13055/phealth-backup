{% extends 'base.html.j2' %}
{% load static %}
{% block maincontent %}
<div class="container">
	<div class="row">
		<div class="panel panel-{{ color }}">
			<div class="panel-heading">{{ title }}</div>
			<form id="main-form" method="POST" action="{{ route }}/signin">
				{% csrf_token %}
				<div class="panel-body">
					<div class="form-group">
						<label for="username" class="visible-xs">E-mail/Mobile-No</label>
						<div class="input-group">
							<div class="input-group-addon hidden-xs">E-Mail/Mobile-No</div>
							<input type="text" name="username" id="username" maxlength="100" class="form-control" required>
						</div>
					</div>
					<div class="form-group">
						<label for="password" class="visible-xs">Password</label>
						<div class="input-group">
							<div class="input-group-addon hidden-xs">Password</div>
							<input type="password" name="password" id="password" maxlength="100" class="form-control" required>
						</div>
					</div>
				</div>
				<div class="panel-footer">
					<span class="text-muted text-right">
						<button type="submit" class="btn btn-{{ color }}"><i class="fa fa-angle-double-right fa-lg"></i> Login</button>
						Don't have an account? Sign up <a href="{{ route }}/signup">here</a>.</span>
					</div>
				</form>
			</div>
		</div>
	</div>
	{% endblock %}
