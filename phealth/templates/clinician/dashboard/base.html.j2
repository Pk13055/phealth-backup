{# dashboard base template (with navbar) #}
{% extends 'clinician/base.html.j2' %}
{% block head %}
<title> Clinician Dashboard - {{ title }}</title>
{% endblock %}
{% load static %}
{% block navbar %}
<nav class="navbar navbar-default navbar-fixed-top navbar-inverse">
	<div class="container-fluid">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collaps" aria-expanded="false"><i class="fa fa-bars fa-lg"></i></button>
			<a class="navbar-brand" href="{% url 'clinician:dashboard' %}"><strong class="hidden-xs">PHealth</strong> Clinician</a>
			<p class="navbar-text text-muted"><em>Dashboard</em></p>
		</div>
		<div class="collapse navbar-collapse" id="navbar-collaps">
			<ul class="nav navbar-nav">
				{# personal dropdown #}
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Personal <span class="caret"></span></a>
					<ul class="dropdown-menu">
						<li><a href="{% url 'clinician:dashboard' %}">Personal Information</a></li>
						<li><a href="{% url 'clinician:calender' %}">Calender Configuration</a></li>
						<li role="separator" class="divider"></li>
						<li><a href="{% url 'clinician:education_training' %}">Education &amp; Training</a></li>
						<li><a href="{% url 'clinician:experience' %}">Experience</a></li>
						<li role="separator" class="divider"></li>
						<li><a href="{% url 'clinician:conditions_treated' %}">Conditions Treated</a></li>
						<li><a href="{% url 'clinician:award_recognition' %}">Awards &amp; Recognition</a></li>
						<li><a href="{% url 'clinician:areas_of_interest' %}">Areas of Interest</a></li>
					</ul>
				</li>
				{# business dropdown #}
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Business <span class="caret"></span></a>
					<ul class="dropdown-menu">
						<li><a href="{% url 'clinician:professional_info' %}">Professional information</a></li>
						<li><a href="{% url 'clinician:consultation_fee' %}">Consultation Fee</a></li>
						<li role="separator" class="divider"></li>
						<li><a href="{% url 'clinician:offerings' %}">Offerings</a></li>
						<li><a href="{% url 'clinician:registrations' %}">Registration</a></li>
						<li><a href="{% url 'clinician:membership' %}">Membership</a></li>
					</ul>
				</li>
			</ul>
			<ul class="nav navbar-nav navbar-right">
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-user-circle fa-lg"></i> Account <span class="caret"></span></a>
					<ul class="dropdown-menu">
						<li><a href="#!">{{ request.session.email }}</a></li>
						<li role="separator" class="divider"></li>
						<li><a href="{% url 'common:signout' %}">Sign out</a></li>
					</ul>
				</li>
			</ul>
		</div>
	</div>
</nav>
{% endblock %}
{% block content %}{% endblock %}
{% block footer %}
<footer class="footer navbar-default navbar-inverse">
	<div class="container-fluid">
		<div class="navbar-header navbar-right">
			<a class="navbar-brand" href="{% url 'clinician:dashboard' %}"><strong>PHealth</strong></a>
		</div>
		<p class="text-muted navbar-text">All rights reserved 2018 &copy;</p>
	</div>
</footer>
{% endblock %}
