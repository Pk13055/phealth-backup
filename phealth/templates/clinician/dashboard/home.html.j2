{% extends "clinician/base.html.j2" %}
{% load static %}
{% load bootstrap %}
{% block content %}
<div class="row">
	<h3>{{ title }}</h3>
</div>
<div class="row">
	<div class="panel panel-primary">
		<div class="panel-heading"><i class="fa fa-edit fa-lg"></i> {{ form_title }}</div>
		<form method="POST">
			{% csrf_token %}
			<div class="panel-body">
				{{ form | bootstrap }}
			</div>
			<div class="panel-footer">
				<button type="submit" class="btn btn-primary btn-block"><i class="fa fa-chevron-up fa-lg"></i> Update!</button>
			</div>
		</form>
	</div>
</div>
{% endblock %}
