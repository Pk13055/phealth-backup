{% extends 'clinician/base.html.j2' %}
{% load static %}
{% block head %}
<script src="{% static 'clinician/js/calender.js' %}"></script>
{% endblock %}
{% block content %}
<div class="row">
	<h2>Calender Configuration <small>Choose Timings</small></h2>
</div>
<div class="row">
<section id="work">
	<div class="row"><hr></div>
	<div class="row">
		<div class="panel panel-info">
			<div class="panel-heading"><h4>Work Timings</h4></div>
			<div class="panel-body">
				<p class="text-muted">
					Set the timings for your work here. Choose the given times per day and <em>tick</em> those
					rows you want to update.
				</p>
				<form>
					<input type="hidden" name="section" value="work">
					<table class="table table-striped table-hover">
						<thead>
							<tr>
								<th><input type="checkbox"></th>
								<th>Day</th>
								<th>Start</th>
								<th>End</th>
							</tr>
						</thead>
						<tbody>
							{% for day in days %}
							<tr>
								<td><input type="checkbox"></td>
								<td>{{ day.day }}</td>
								<td><input type="time" name="start_time[]" value="23:30"></td>
								<td><input type="time" name="end_time[]" value="{{ day.end }}"></td>
							</tr>
							{% endfor %}
						</tbody>
					</table>
				</form>
			</div>
			<div class="panel-footer">
				<button class="update_section btn btn-info btn-block" type="button" current_section="work">Update <i class="fa fa-chevron-up"></i></button>
			</div>
		</div>
	</div>
</section>
<section id="break">
	<div class="row"><hr></div>
	<div class="row">
		<div class="panel panel-warning">
			<div class="panel-heading"><h4>Break Timings</h4></div>
			<div class="panel-body">
				<p class="text-muted">
					Set the timings for your breaks here. Set the times for a given day and add more timings by clicking the <i class="fa fa-plus"></i> symbol. <em>Tick</em> those
					rows you want to update.
				</p>
				<form>
					<input type="hidden" name="section" value="break">
					<table class="table table-striped table-hover">
						<thead>
							<tr>
								<th><input type="checkbox"></th>
								<th>Day</th>
								<th>Start</th>
								<th>End</th>
							</tr>
						</thead>
						<tbody>
							{% for day in days %}
							<tr>
								<td><input type="checkbox"></td>
								<td><button type="button" class="add_rows btn btn-default"><i class="fa fa-plus"></i></button> {{ day.day }}</td>
								<td><input type="time" name="start_time[]" value="23:30"></td>
								<td><input type="time" name="end_time[]" value="{{ day.end }}"></td>
							</tr>
							{% endfor %}
						</tbody>
					</table>
				</form>
			</div>
			<div class="panel-footer">
				<button class="update_section btn btn-warning btn-block" type="button" current_section="break">Update <i class="fa fa-chevron-up"></i></button>
			</div>
		</div>
	</div>
</section>
<section id="vacation">
	<div class="row"><hr></div>
	<div class="row">
		<div class="panel panel-success">
			<div class="panel-heading">
				<h4><button type="button" class="add_vacation btn btn-default"><i class="fa fa-plus fa-lg"></i></button> Vacation Timings</h4>
			</div>
			<div class="panel-body">
				<p class="text-muted">
					Set your vacation periods here. Click the <i class="fa fa-plus"></i> to add a vaction and <i class="fa fa-minus-circle"></i> to remove one. <em>Tick</em> those rows you want to update.
				<form>
					<input type="hidden" name="section" value="vacation">
					<table class="table table-striped table-hover">
						<thead>
							<tr>
								<th><input type="checkbox"></th>
								<th>Start Date</th>
								<th>End Date</th>
								<th>Action(s)</th>
							</tr>
						</thead>
						<tbody>
							{% for day in days %}
							<tr>
								<td><input type="checkbox"></td>
								<td><input type="date" name="start_date[]" value="23:30"></td>
								<td><input type="date" name="end_date[]" value="{{ day.end }}"></td>
								<td><button type="button" class="delete_rows btn btn-danger"><i class="fa fa-minus-circle"></i></button></td>
							</tr>
							{% endfor %}
						</tbody>
					</table>
				</form>
				</div>
				<div class="panel-footer">
					<button class="update_section btn btn-success btn-block" type="button" current_section="vacation">Update <i class="fa fa-chevron-up"></i></button>
				</div>
			</div>
		</div>
	</section>
</div>
{% endblock %}
