{% extends "clinician/dashboard/base.html.j2" %}
{% load static %}
{% load bootstrap %}
{% block head %}
<script src="{% static 'common/js/forms.js' %}"></script>
{% endblock %}
{% block content %}
<div class="row">
	<h3>{{ title }}</h3>
</div>
<div class="row">
	<div class="panel panel-danger">
		<div class="panel-heading"><i class="fa fa-plus fa-lg"></i> {{ form_title }}</div>
		<form method="POST">
			{% csrf_token %}
			<div class="panel-body">
				{{ form | bootstrap }}
			</div>
			<div class="panel-footer">
				<button type="submit" name="data_type" value="add" class="btn btn-danger btn-block"><i class="fa fa-plus fa-lg"></i> Add!</button>
			</div>
		</form>
	</div>
</div>
<section class="row edit_experience">
	<div class="row">
		<h3>Edit existing surgeries</h3>
	</div>
	<div class="row">
		<div class="col-xs-12">
			<div class="panel panel-primary">
				<div class="panel-heading"><i class="fa fa-edit fa-lg"></i> Edit surgeries</div>
				<form method="POST">
					<div class="panel-body">
						{% csrf_token %}
						{{ edit_forms.management_form }}
						<table class="table table-striped table-hoverable">
							<thead>
								<tr>
									<th><input type="checkbox"></th>
									<th>Surgery</th>
								</tr>
							</thead>
							<tbody>
								{% for forme in edit_forms.forms %}
								{% with form=forme|bootstrap %}
								<tr>
									<td><input type="checkbox" class="enabler"></td>
									<td class="form-eles">
										{{ form }}
									</td>
								</tr>
								{% endwith %}
								{% endfor %}
							</tbody>
						</table>
					</div>
					<div class="panel-footer">
						<button type="submit" class="btn btn-block btn-primary" name="data_type" value="update"><i class="fa fa-chevron-up fa-lg"></i> Update</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</section>
{% endblock %}
