{% extends "clinician/dashboard/base.html.j2" %} {% load static %} {% block script %}
<script src="{% static 'clinician/js/calender.js' %}"></script>
{% endblock %} {% block content %}
<div class="container-fluid">
	<div class="row bg-title">
		<div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
			<h4 class="page-title">Manage Participants</h4>
		</div>
		<div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
			<ol class="breadcrumb">
				<li><a href="{% url 'clinician:dashboard_home' %}">Dashboard</a></li>
				<li><a href="{% url 'clinician:timing_work' %}">Work Timings</a></li>
			</ol>
		</div>
	</div>
	<section id="work">
		<div class="row">
			<div class="col-md-12">
				<div class="panel panel-info">
					<div class="panel-heading">
						Work Timings
					</div>
					<div class="panel-wrapper collapse in" aria-expanded="true">
						<div class="panel-body">
							<div class="form-body">
								<p class="text-muted">
									Set the timings for your work here. Choose the given times per day and <em>tick</em> those rows you want to update.
								</p>
								<form method="POST">
									{% csrf_token %}
									<input type="hidden" name="section" value="work">
									<table class="table table-striped table-hover">
										<thead>
											<tr>
												<th><input type="checkbox"></th>
												<th>Day</th>
												<th>From <em>(timing)</em></th>
												<th>To <em>(timing)</em></th>
											</tr>
										</thead>
										<tbody>
											{% for day in timings %}
											<tr>
												<td><input type="checkbox"></td>
												<td>{{ day.day }}</td>
												<td><input type="time" name="timings['{{ day.day }}']" value="{{ day.start }}" required></td>
												<td><input type="time" name="timings['{{ day.day }}']" value="{{ day.end }}" required></td>
											</tr>
											{% endfor %}
										</tbody>
									</table>
									<div class="form-actions">
										<button type="submit" class="btn btn-success">Save Changes</button>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</div>
{% endblock content %}
