{% extends "clinician/dashboard/base.html.j2" %} {% block content %}
<div class="container-fluid">
	<div class="row bg-title">
		<div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
			<h4 class="page-title">Manage Participants</h4>
		</div>
		<div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
			<ol class="breadcrumb">
				<li><a href="index.html">Dashboard</a></li>
				<li><a href="#">Basic Details</a></li>
			</ol>
		</div>
		<!-- /.col-lg-12 -->
	</div>
	<div class="row">
		<div class="col-md-12">
			<div class="panel panel-info">
				<div class="panel-heading">
					Work Timings
				</div>
				<div class="panel-wrapper collapse in" aria-expanded="true">
					<div class="panel-body">
						<div class="form-body">
							<p class="text-muted">
								Set the timings for your work here. Choose the given times per day and <em>tick</em> those rows you want to update.
							</p>
							<form>
								<input type="hidden" name="section" value="work">
								<table class="table table-striped table-hover">
									<thead>
										<tr>
											<th>
												<input type="checkbox">
											</th>
											<th>Day</th>
											<th>Start Time</th>
											<th>End Time</th>
										</tr>
									</thead>
									<tbody>
										<tr>
											<td>
												<input type="checkbox">
											</td>
											<td>Sunday</td>
											<td>
												<input type="time" name="timings['Sunday']" value="19:00">
											</td>
											<td>
												<input type="time" name="timings['Sunday']" value="19:00">
											</td>
										</tr>
										<tr>
											<td>
												<input type="checkbox">
											</td>
											<td>Monday</td>
											<td>
												<input type="time" name="timings['Monday']" value="19:00">
											</td>
											<td>
												<input type="time" name="timings['Monday']" value="19:00">
											</td>
										</tr>
										<tr>
											<td>
												<input type="checkbox">
											</td>
											<td>Tuesday</td>
											<td>
												<input type="time" name="timings['Tuesday']" value="20:00">
											</td>
											<td>
												<input type="time" name="timings['Tuesday']" value="02:03">
											</td>
										</tr>
										<tr>
											<td>
												<input type="checkbox">
											</td>
											<td>Wednesday</td>
											<td>
												<input type="time" name="timings['Wednesday']" value="15:00">
											</td>
											<td>
												<input type="time" name="timings['Wednesday']" value="15:30">
											</td>
										</tr>
										<tr>
											<td>
												<input type="checkbox">
											</td>
											<td>Thursday</td>
											<td>
												<input type="time" name="timings['Thursday']" value="09:23">
											</td>
											<td>
												<input type="time" name="timings['Thursday']" value="19:00">
											</td>
										</tr>
										<tr>
											<td>
												<input type="checkbox">
											</td>
											<td>Friday</td>
											<td>
												<input type="time" name="timings['Friday']" value="19:00">
											</td>
											<td>
												<input type="time" name="timings['Friday']" value="19:00">
											</td>
										</tr>
									</tbody>
								</table>
							</form>
							<div class="form-actions">
								<div class="row">
									<div class="col-md-12">
										<div class="row">
											<div class="col-md-offset-10 col-md-2">
												<button type="submit" class="btn btn-success">Save Changes</button>
											</div>
										</div>
									</div>
									<div class="col-md-6"> </div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- /.container-fluid -->
{% endblock content %}
