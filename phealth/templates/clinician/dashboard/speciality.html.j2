{% extends "clinician/base.html.j2" %}
{% load static %}
{% load bootstrap %}
{% block content %}
<div class="row">
	<h2>Clinician Registration</h2>
</div>
<div class="row">
	<div class="container">
		{% for speciality in speciality_list %}
			<div class="well well-lg">
				<h4>{{speciality.name}}</h4>
				<p>
					{{speciality.description}}
				</p>
			</div>
		{% endfor %}
	</div>
	<form method="POST">
		<div class="row">
			<div class="panel panel-success">
				<div class="panel-heading"><i class="fa fa-user-circle-o fa-lg"></i>Speciality Information</div>
				<div class="panel-body">
					{% csrf_token %}
					{{ speciality_form | bootstrap }}
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12">
				<button class="btn btn-block btn-primary"><i class="fa fa-add fa-lg"></i> Add</button>
			</div>
		</div>
	</form>
{# <script src="{% static 'clinician/js/register.js' %}"></script> #}
{% endblock %}
