{% extends "clinician/base.html.j2" %}
{% load static %}
{% load bootstrap %}
{% block content %}
<div class="row">
	<h2>Clinician Registration</h2>
</div>
<div class="row">
	{% for speciality in speciality_list %}
		<a class="dropdown-item" href="#">
			<div class="well well-lg">
				<h4>{{speciality.name}}</h4>
				<p>
					{{speciality.description}}
				</p>
			</div>
		</a>
	{% endfor %}
</div>
<form method="POST">
	<div class="row">
		<div class="panel panel-success">
			<div class="panel-body">
				{% csrf_token %}
				{{ speciality_form | bootstrap }}
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-12">
			<button class="btn btn-block btn-primary"><i class="fa fa-add fa-lg"></i> Add</button>
		</div>
	</div>
</form>
</div>
{# <script src="{% static 'clinician/js/register.js' %}"></script> #}
{% endblock %}
