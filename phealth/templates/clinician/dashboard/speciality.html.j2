{% extends "clinician/base.html.j2" %}
{% load static %}
{% load bootstrap %}
{% block content %}
<div class="row">
	<h2>Clinician Registration</h2>
</div>
<div class="row">
	<form method="POST">
		<div class="col-xs-12 col-md-6">
			<div class="panel panel-success">
				<div class="panel-heading"><i class="fa fa-user-circle-o fa-lg"></i>Speciality Information</div>
				<div class="panel-body">
					{% csrf_token %}
					{{ speciality_form | bootstrap }}
				</div>
			</div>
		</div>
		<div class="col-xs-12 col-md-6">
		<div class="row">
			<div class="col-xs-12">
				<button class="btn btn-block btn-primary"><i class="fa fa-add fa-lg"></i> Add</button>
			</div>
		</div>
	</form>
</div>
{# <script src="{% static 'clinician/js/register.js' %}"></script> #}
{% endblock %}
